<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_backgroud"
    android:orientation="vertical">

    <include layout="@layout/app_base_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minEms="6"
                android:text="人员姓名："
                style="@style/NormalBlackTextView"
                android:gravity=""/>
            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CommonEditText" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minEms="6"
                android:text="起始有效期："
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />
            <TextView
                android:id="@+id/tv_available_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:background="@drawable/bg_edittext"
                android:padding="8dp"
                android:drawableRight="@mipmap/arrow_down"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minEms="6"
                android:text="截止有效期："
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />
            <TextView
                android:id="@+id/tv_expire_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:padding="8dp"
                android:drawableRight="@mipmap/arrow_down"
                android:background="@drawable/bg_edittext"
                android:text="请选择" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minEms="6"
                android:text="人员类型"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />
            <TextView
                android:id="@+id/tv_emp_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="内部"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:padding="8dp"
                android:drawableRight="@mipmap/arrow_down"
                android:background="@drawable/bg_edittext"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minEms="6"
                android:text="人员性别："
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />
            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="男"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:padding="8dp"
                android:drawableRight="@mipmap/arrow_down"
                android:background="@drawable/bg_edittext"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minEms="6"
                android:text="身份证号："
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />
            <EditText
                android:id="@+id/et_citizen_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CommonEditText"  />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minEms="6"
                android:text="市民卡号："
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />
            <EditText
                android:id="@+id/et_city_card_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CommonEditText"  />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minEms="6"
                android:text="人员职务："
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />
            <EditText
                android:id="@+id/et_career"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CommonEditText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minEms="6"
                android:text="人员电话："
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />
            <EditText
                android:id="@+id/et_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CommonEditText"  />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minEms="6"
                android:text="所属单位："
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />
            <EditText
                android:id="@+id/et_dept_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CommonEditText"  />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tv_emp_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="人员姓名：苏A12R79"
            style="@style/NormalBlackTextView"/>
        <TextView
            android:id="@+id/tv_traffic_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通行类型：正常通行"
            style="@style/NormalBlackTextView"
            android:layout_gravity="right"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginTop="10dp" >
        <TextView
            android:id="@+id/tv_dept_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="所属单位：苏A12R79"
            style="@style/NormalBlackTextView"/>
        <TextView
            android:id="@+id/tv_emp_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人员类型：内部"
            style="@style/NormalBlackTextView"
            android:layout_gravity="right"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_card_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="通行卡号："
        style="@style/NormalBlackTextView"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_gateway_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="通行地点："
        style="@style/NormalBlackTextView"
        android:layout_marginTop="10dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="通行时间"
            style="@style/NormalBlackTextView"/>
        <TextView
            android:id="@+id/tv_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="进门"
            style="@style/NormalBlackTextView"
            android:layout_gravity="right"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

    </LinearLayout>



</LinearLayout>